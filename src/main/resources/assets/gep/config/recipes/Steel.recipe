// steel recipes

// Steel Ingot
# gep:smeltery @ steel_0
@in input
oredict ingotIron*4
item coal
@out output
item gep:steel_ingot*4

# gep:smeltery @ steel_1
@in input
oredict ingotIron*8
item coal*2
@out output
item gep:steel_ingot*8

// Steel Plates
# gep:rolling_mill @ steel_plate_x1
@in
item gep:steel_ingot
@out
item gep:steel_plate

# gep:rolling_mill @ steel_plate_x2
@in
item gep:steel_ingot*2
@out
item gep:steel_plate*2

# gep:rolling_mill @ steel_plate_x4
@in
item gep:steel_ingot*4
@out
item gep:steel_plate*4

# gep:rolling_mill @ steel_plate_x8
@in
item gep:steel_ingot*8
@out
item gep:steel_plate*8